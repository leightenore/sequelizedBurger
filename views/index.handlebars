<div class="container">
  <center>
    <div class="image"></div>​ 
    <h4>Welcome to Good Burger! Home of the Good Burger! Can I take your order?</h4>
    <div class="burgerGif"></div>​
  </center>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" id="addBurger">
      <center><h4>Add a New Good Burger to the Menu!</h4></center>

      <form id="addForm">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" name="burger_name" id="burgerInput">
        </div>

        <button class="btn btn-secondary" id="addButton" type="submit">Add</button>
      </form>
    </div>
  </div><br><br>

  <div class="row">
    <div class="col-md-6">
      <center><u><h2>Burger Menu</h2></u></center>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <button class="btn btn-secondary" id="burgerButton" data-id="{{this.id}}" data-eaten="{{this.devoured}}">
          Devour It!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <center><u><h2>Devoured Burgers</h2></u></center>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{this.burger_name}}

        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>